<div class="card">
  <div class="card-header">
    <h4>Product List</h4>
  </div>
  <div class="card-body">
    <% if @products.any? %>
      <table class="product-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Status</th>
            <th>Article Number</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product[:id] %></td>
              <td><%= product[:name] %></td>
              <td><%= product[:brand] %></td>
              <td><%= product[:status] %></td>
              <td><%= product[:article_number] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>표시할 상품이 없습니다.</p>
    <% end %>
  </div>
</div>
